mixin header(headerMods, currentUrl)
  header.header(class=headerMods)
    .header__inner
      .logo
        +icn('icn-logo', 70, 23)
      .nav.header__nav
        .nav__inner
          .nav__item
            .nav__text
              a(href="#").nav__link управление недвижимостью
              .nav__icon
            ul.nav__dropdown
              li.nav__list
                a(href="#").nav__list-link технический аудит недвижимости
              li.nav__list
                a(href="#").nav__list-link эксплуатация и техническое обслуживание недвижимости
              li.nav__list
                a(href="#").nav__list-link пожарная безопасность
              li.nav__list
                a(href="#").nav__list-link управление арендными отношениями
              li.nav__list
                a(href="#").nav__list-link аварийно-диспетчерская служба
          .nav__item
            .nav__text
              a(href="#").nav__link продажа и аренда
          .nav__item
            .nav__text
              a(href="#").nav__link консалтинг
              .nav__icon
            ul.nav__dropdown
              li.nav__list
                a(href="#").nav__list-link бухгалтерские и кадровые услуги
              li.nav__list
                a(href="#").nav__list-link юридическое сопровождение
              li.nav__list
                a(href="#").nav__list-link производственный контроль
      button.btn.modal__open.header__modal
        .btn__text
          span связаться с нами
          +icn('icn-arrow', 16, 16).btn__arrow
      button.btn.header__menu.menu__open
        .btn__text
          .header__burger
            span.header__line.header__line--one
            span.header__line.header__line--two
            span.header__line.header__line--three
          span меню